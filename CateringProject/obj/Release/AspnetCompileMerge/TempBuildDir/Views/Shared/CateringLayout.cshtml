<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/CateringLayout.css" rel="stylesheet" />
</head>
<body>
    <div class="menudiv">
        <img src="~/images/logof.png" class="img3" />
        <ul>
            <li>@Html.ActionLink("Home", "Create", "HomePage", new { area = "" }, new { @class = "link1" })</li>
            <li>@Html.ActionLink("About", "About", "Home", new { area = "" }, new { @class = "link1" })</li>
            <li>@Html.ActionLink("Orders", "Index", "HomePage", new { area = "" }, new { @class = "link1" })</li>
            <li>Services</li>
            <li>@Html.ActionLink("Contact", "Contact", "Home", new { area = "" }, new { @class = "link1" })</li>
        </ul>
    </div>
    <div class="bodydiv">
        @RenderBody()
        <footer class="footer">
            <hr />
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>
</body>
</html>
